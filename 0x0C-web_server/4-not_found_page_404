#!/usr/bin/env bash

# Purpose: This script automates the configuration of a basic Nginx web server,
#          including installation (if necessary), a simple webpage, a redirect rule,
#          a custom 404 page, and a server identification header.

# --- Installation ---
sudo apt-get -y update
sudo apt-get -y install nginx

# --- Basic Webpage ---
echo "Hello World!" | sudo tee /var/www/html/index.html > /dev/null

# --- Redirection Rule ---
sed -i '/^\s*server\s*{/i \    rewrite ^/redirect_me https://www.youtube.com/watch?v=QH2-TGUlwu4 permanent;' /etc/nginx/sites-available/default

# --- Custom 404 Page ---
echo "Ceci n'est pas une page" | sudo tee /var/www/html/custom_404.html > /dev/null
sed -i '/location \//a \    error_page 404 /custom_404.html;' /etc/nginx/sites-available/default

# --- Restart Nginx ---
service nginx restart
